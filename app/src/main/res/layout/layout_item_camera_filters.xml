<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="104dp"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/image_filter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/coding_image" />

    <TextView
        android:id="@+id/title_filter"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:maxLines="1"
        android:text="Hahaha"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/image_filter"
        app:layout_constraintStart_toStartOf="@+id/image_filter"
        app:layout_constraintTop_toBottomOf="@+id/image_filter" />

</androidx.constraintlayout.widget.ConstraintLayout>